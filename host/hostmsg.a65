idxl	.byt <m0, <m1, <m2, <m3, <m4, <m5, <m6, <m7, <m8
	.byt <m9, <m10, <m11, <m12, <m13, <m14, <m15, <m16
	.byt <m17, <m18, <m19, <m20, <m21, <m22, <m23, <m24
	.byt <m25, <m26

idxh	.byt >m0, >m1, >m2, >m3, >m4, >m5, >m6, >m7, >m8
	.byt >m9, >m10, >m11, >m12, >m13, >m14, >m15, >m16
	.byt >m17, >m18, >m19, >m20, >m21, >m22, >m23, >m24
	.byt >m25, >m26

errl	.byt <e0, <e1, <e2, <e3, <e4, <e5, <e6, <e7, <e8
	.byt <e9, <e10

errh 	.byt >e0, >e1, >e2, >e3, >e4, >e5, >e6, >e7, >e8
	.byt >e9, >e10

	.text

; output a hex value
+hexout .(
        pha
        lsr
        lsr
        lsr
        lsr
        jsr nibout
        pla
        and #$0f
nibout
        cmp #10
        bcc x
        adc #$06        ; $41 ("a") - $30 ("0") - carry - 10 (AC)
x       adc #$30        ; when digit, add "0"
        jmp log_printc
        .)

+dseparator .(
	lda #"="
	.byt $2c
+separator 
	lda #"-"
	ldy #10
l0	jsr log_printc
	dey
	bne l0
	rts
	.)


	.)


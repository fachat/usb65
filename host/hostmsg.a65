m24	.asc "UNKNOWN HID PROTO: ",0
m25	.asc "IFC DETECTED",13,0
m26	.asc "UNKNOWN DEVICE CLASS: ",0

e0	.asc "ERROR GETTING DESCRIPTOR",13,0
